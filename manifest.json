{
  "name": "PASRS Helper",
  "description": "Automatically uploads the replay of your last battle in PSD then it will be copied to your clipboard.",
  "version": "0.3",
  "manifest_version": 3,
  "icons": {
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ],
      "js": [
        "dist/main.js"
      ],
      "css": [
        "dist/styles/global.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/psd_replay.js",
        "dist/room.js",
        "dist/styles/global.css"
      ],
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ]
    }
  ]
}
